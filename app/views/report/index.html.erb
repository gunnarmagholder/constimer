<h1>Reports for <%= @user.login %></h1>
<p>These are the working entries.</p>


<form action="report" method="get" accept-charset="utf-8">
	<p>
	 <%= select("project", "id", @projects.collect {|p| [ p.name, p.id ] }, {:include_blank => true}) %>	
    </p>
	<p><input type="submit" value="Continue &rarr;"></p>
</form>


<table border="1">
  <tr>
	<th>Project</th>
    <th>Date</th>
    <th>Starttime</th>
    <th>Endtime</th>
    <th>Working time (min)</th>
    <th>Notes</th>
  </tr>
<% if @entries.nil? %>
  Nothing available at the moment
<% else %>
  <%= render :partial => 'entries/noedit', :collection => @entries %>
<% end %>
</table>
