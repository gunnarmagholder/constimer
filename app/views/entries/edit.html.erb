<h1>Editing entry</h1>

<% form_for(@entry) do |f| %>
  <%= f.error_messages %>
    <p>
    <%= f.label :project_name %><br />
    <%= text_field_with_auto_complete :entry, :project_name, { :size => 15 }, { :url => formatted_projects_path(:js), :method => :get, :param_name => 'search' } %>
  </p>
  <p>
    <%= f.label :edate %><br />
    <%= f.date_select :edate %>
  </p>
  <p>
    <%= f.label :starttime %><br />
    <%= f.time_select :starttime %>
  </p>
  <p>
    <%= f.label :endtime %><br />
    <%= f.time_select :endtime %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_field :notes %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @entry %> |
<%= link_to 'Back', entries_path %>
